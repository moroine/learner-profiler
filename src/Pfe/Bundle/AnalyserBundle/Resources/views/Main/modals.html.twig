{% block modals %}
    {# Trace Modal #}
    <div class="modal fade" id="trace-modal" role="dialog" aria-labelledby="add-trace" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create a Trace</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Properties</legend>
                            <div class="form-group">
                                <label for="trace-name" class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="trace-name" placeholder="Name" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="trace-operation" class="col-sm-2 control-label">Operation</label>
                                <div class="col-sm-10">
                                    <div class="radio">
                                        <label>
                                            <input type="radio" name="trace-operation" value="count" checked>
                                            Count
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="trace-type" class="col-sm-2 control-label">Type</label>
                                <div class="col-sm-10">
                                    <div class="radio">
                                        <label class="map-type-option">
                                            <input type="radio"  name="trace-type" value="choropleth">
                                            Choropleth
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label class="map-type-option">
                                            <input type="radio" name="trace-type" value="bubble">
                                            Bubble
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label class="graph-type-option">
                                            <input type="radio" name="trace-type" value="histogram">
                                            Histogram
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend>Group By</legend>
                            {% include 'PfeAnalyserBundle:Main:group_form.html.twig' %}
                        </fieldset>
                        <fieldset>
                            <legend>Filters</legend>
                            <button type="button" id="add-filter" class="btn btn-success btn-block" data-toggle="modal" data-target="#filters-modal">Add Filter</button>
                            <table class="table table-striped" id="filter-table">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Rule</th>
                                    <th>Type</th>
                                    <th>Field</th>
                                    <th>Value</th>
                                </tr>
                            </table>
                        </fieldset>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="trace-confirm">Confirm</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}