{% extends "::base.html.twig" %}

{% block title %}PfeAnalyserBundle:Main:index{% endblock %}

{% block body %}
    <div class="container" id="main-container">
        <div id="alert-message">

        </div>
        <div class="col-md-12">
            <div class="col-md-3" id="navigation">
                {% include 'PfeAnalyserBundle:Main:navigation.html.twig' %}
            </div>
            <div class="col-md-9">
                {% include 'PfeAnalyserBundle:Main:visualisation.html.twig' %}
            </div>
        </div>
        <!--div class="col-md-12">
        {# include 'PfeAnalyserBundle:Main:legend.html.twig' #}
        </div-->
        <hr />
        <div class="col-md-12" style="margin-top: 30px;">
            <h3>Traces</h3>
            <table id="recap" class="table table-hover">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Group Type</th>
                    <th>Group Field</th>
                </tr>
            </table>
        </div>
        <!--div class="col-md-12">
        {# include 'PfeAnalyserBundle:Main:details.html.twig' #}
        </div-->
        <div class="">
            {% include 'PfeAnalyserBundle:Main:modals.html.twig' %}
        </div>
        <div class="">
            {% include 'PfeAnalyserBundle:Main:filters.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@d3_js' debug=false %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        var routing
        ={{ routing|json_encode()|raw }}
    </script>
    {% javascripts
        '@PfeAnalyserBundle/Resources/public/js/lib/d3.min.js'
        '@PfeAnalyserBundle/Resources/public/js/lib/topojson.v1.min.js'
        '@PfeAnalyserBundle/Resources/public/js/lib/datamaps.world.min.js'
        '@PfeAnalyserBundle/Resources/public/js/lib/config_histogram.js'
        '@PfeAnalyserBundle/Resources/public/js/lib/d3.tip.v0.6.3.js'
        '@PfeAnalyserBundle/Resources/public/js/*/*'
        '@PfeAnalyserBundle/Resources/public/js/*/*/*'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
