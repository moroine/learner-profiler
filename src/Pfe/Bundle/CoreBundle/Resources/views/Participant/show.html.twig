{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Participant</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Last_access</th>
                <td>{{ entity.lastaccess|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Mooc_id</th>
                <td>{{ entity.moocid }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('participant') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
